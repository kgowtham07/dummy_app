<div class="modal fade" id="modalSignUpForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header text-center">
              <h4 class="modal-title w-100 font-weight-bold">Sign Up</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <%= form_for(:session, url: '#') do |f| %>
            <div class="modal-body mx-3">

            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control validate' %>
            </div> 

            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control validate' %>
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control validate' %>  
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control validate' %>  
            </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
              <%= f.submit "SignUp", class: "btn btn-default" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>